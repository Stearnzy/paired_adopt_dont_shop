<%= form_tag("/shelters/#{@shelter.id}", method: :post) do %>
  <%= label_tag "User name" %><br>
  <%= text_field_tag :user_name %><br><br>

  <%= label_tag "Title" %><br>
  <%= text_field_tag :title %><br><br>

  <%= label_tag "Rating" %><br>
  <%= select_tag :rating, options_for_select(1..5), prompt: "Select" %><br><br>

  <%= label_tag "Content" %><br>
  <%= text_field_tag :content %><br><br>

  <%= label_tag "Picture" %><br>
  <%= text_field_tag :picture %><br><br>

  <%= submit_tag "Submit"%>
<% end %>