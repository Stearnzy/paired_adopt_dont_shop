<h1>Furry Friends Needing a Home</h1>

<%= link_to "Start an Application", "/applications/new" %>

<% @pets.each do |pet| %>
  <h2><a href="/pets/<%= pet.id %>"><%= pet.name %></a></h2>
  <img src="<%= pet.image %>" alt="<% pet.name %>" width="30%">
  <p>Age: <%= pet.age %><br>
    Sex: <%= pet.sex %><br>
    Current shelter: <a href="/shelters/<%= pet.shelter.id %>"><%= pet.shelter.name %></a>
  </p>
  <a href="/pets/<%= pet.id %>/edit">Edit Pet Info</a><br>
  <a href="/pets/<%= pet.id %>" data-method="DELETE">Delete Pet</a><br><br>
<% end %>